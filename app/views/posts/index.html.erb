<h1>
  Posts
  <%= link_to "Add new", new_post_path %>
</h1>
<ul class="post-list">
<% @posts.each do |post| %>
  <li class="post-item">
    <%= link_to post.title, post_path(post) %>
    <%= link_to "Edit", edit_post_path(post) %>
    <%= button_to "Delete", post_path(post), method: :delete, data: { turbo_confirm: "Sure?" } %>
  </li>
<% end %>
</ul>
